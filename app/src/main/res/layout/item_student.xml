<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="30dp">
    <EditText
        android:id="@+id/edt_item_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="id"/>
    <EditText
        android:id="@+id/edt_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="name"/>

    <EditText
        android:id="@+id/edt_item_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="gioi tinh"/>

    <EditText
        android:id="@+id/edt_item_iclass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="lop"/>

    <EditText
        android:id="@+id/edt_item_pointmath"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="diem toan"
        android:inputType="number"/>

    <EditText
        android:id="@+id/edt_item_pointchemistry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="diem hoa"
        android:inputType="number" />

    <EditText
        android:id="@+id/edt_item_pointphysic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="diem ly"
        android:inputType="number"/>

</LinearLayout>